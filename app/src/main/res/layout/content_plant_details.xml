<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.wassim.sprinkle.app.PlantDetails"
    tools:showIn="@layout/activity_plant_details"
    android:layout_marginTop="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/plant_name_title"
            android:textStyle="normal|bold"
            android:paddingTop="22dp"
            android:paddingLeft="22dp"
            android:paddingRight="22dp"
            android:paddingBottom="16dp" />

        <TextView
            android:id="@+id/detail_plant_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="32dp"
            android:text="zrelfjjlze"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/water_frequency"
            android:textStyle="normal|bold"
            android:paddingTop="22dp"
            android:paddingLeft="22dp"
            android:paddingRight="22dp"
            android:paddingBottom="16dp" />

        <TextView
            android:id="@+id/detail_water_fq"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="32dp"
            android:text="zrelfjjlze"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/plant_add_date_title"
            android:textStyle="normal|bold"
            android:paddingTop="22dp"
            android:paddingLeft="22dp"
            android:paddingRight="22dp"
            android:paddingBottom="16dp" />


        <TextView
            android:id="@+id/detail_plant_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="32dp"
            android:text="zlkelfjezlfjezlk" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/previous_water_date_title"
            android:textStyle="normal|bold"
            android:paddingTop="22dp"
            android:paddingLeft="22dp"
            android:paddingRight="22dp"
            android:paddingBottom="16dp" />

        <TextView
            android:id="@+id/detail_previous_water"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="32dp"
            android:text="zlkelfjezlfjezlk" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/next_water_date_title"
            android:textStyle="normal|bold"
            android:paddingTop="22dp"
            android:paddingLeft="22dp"
            android:paddingRight="22dp"
            android:paddingBottom="16dp" />

        <TextView
            android:id="@+id/detail_next_water"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="32dp"
            android:text="zlkelfjezlfjezlk" />

    </LinearLayout>


</android.support.v4.widget.NestedScrollView>
